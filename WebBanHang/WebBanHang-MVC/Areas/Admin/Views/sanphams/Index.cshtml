@model IEnumerable<WebBanHang_MVC.Models.sanpham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Sản phẩm
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                Loại
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.tenSP)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.gia)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.khuyenmai)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.avatar)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ngaytao)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.soluong)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Hang)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.chitiet)
                            </th>
                            <th></th>
                        </tr>
                    </thead>


                    <tbody>
                        @foreach (var item in ViewBag.sanphams)
                        {
                        <tr>
                            <td>
                                @item.Danhmuc.tenHDT
                            </td>
                            <td>
                                @item.tenSP
                            </td>
                            <td>
                                @item.gia.ToString("###,###,###,### VND").Replace(',', '.')
                            </td>
                            <td>
                                @item.khuyenmai
                            </td>
                            <td>
                                @if (item.avatar != null)
                                {
                                    <img src="~/images/sanpham/@item.avatar" width="100" height="100" />
                                }
                                else
                                {
                                    <p>Không  có ảnh</p>
                                }
                            </td>
                            <td>
                                @item.ngaytao
                            </td>
                            <td>
                               @item.soluong

                            </td>
                            
                            <td>
                                @item.Hang
                            </td>

                            <td>
                                <a href="@Url.Action("Details", new { id = item.id })" class="btn btn-primary btn-sm">Chi tiết</a>
                                <a href="@Url.Action("Edit", new { id = item.id })" class="btn btn-primary btn-sm">Sửa</a>
                                <a href="@Url.Action("Delete",new { id = item.id})" onclick="return confirm('Bạn có chắc muốn xóa ?');" class="btn btn-danger btn-sm">Xóa</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="@Url.Action("create", "sanphams")" class="btn btn-danger"><i class="fas fa-plus-circle"></i>&nbsp;&nbsp;Thêm mới</a>
            </div>
        </div>
        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
    </div>