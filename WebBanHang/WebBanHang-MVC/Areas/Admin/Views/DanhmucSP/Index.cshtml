@model IEnumerable<WebBanHang_MVC.Models.Danhmuc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

    <p>
        <a href="@Url.Action("create")" class="btn btn-danger"><i class="fas fa-plus-circle"></i>&nbsp;&nbsp;Thêm mới</a>

    </p>

    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.tenHDT)
                    </th>
                    <th></th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.tenHDT)
                        </td>
                        <td>

                            <a href="@Url.Action("Edit", new { id = item.id })" class="btn btn-primary btn-sm">Sửa</a>
                            <a href="@Url.Action("Delete",new { id_donhang = item.id})" onclick="return confirm('Bạn có chắc muốn xóa ?');" class="btn btn-danger btn-sm">Xóa</a>

                        </td>
                    </tr>
                }

            </tbody>

        </table>
    </div>



