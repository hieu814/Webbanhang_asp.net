@using WebBanHang_MVC.Models
@model WebBanHang_MVC.Models.Danhmuc

@{
    ViewBag.Title = "Danhsach";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="header">

</div>
<div class="main">
    <div class="content">
        <div class="content_top">
            <div class="heading">
                <h3>@ViewBag.tieude </h3>
            </div>
            <div class="see">
                <p><a href="#">See all Products</a></p>
            </div>
            <div class="clear"></div>
        </div>
        <div>
            <div class="section group">
                <div style="float:right;width:92%">
                    @foreach (var i in ViewBag.sanpham)
                    {
                        <div style="width:auto;height:auto;text-align:center">
                            <div class="grid_1_of_4 images_1_of_4">

                                <a href="@Url.Action("chitietsp", "home", new { @id=@i.id })"><img src="~/images/sanpham/@i.avatar" height="200" alt="" /></a>
                                <h2>@i.tenSP </h2>
                                <div class="price-details">
                                    <div class="price-number">
                                        <p><span class="rupees">@i.gia</span></p>
                                    </div>
                                    <div class="add-cart">
                                        <h4><a href="@Url.Action("ThemVaoGio", "giohang", new { @id_sanpham=@i.id })">Thêm vào giỏ</a></h4>
                                    </div>

                                </div>
                            </div>
                        </div>

                    }

                </div>
            </div>

        </div>

    </div>
</div>

