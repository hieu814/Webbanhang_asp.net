@using WebBanHang_MVC.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="header">
        

        <div class="header_slide">
            <div class="header_bottom_left">
                <div class="categories">
                    <ul>
                        <h3>Categories</h3>
                        @foreach (var i in ViewBag.danhmuc)
                        {
                            <li><a href="@Url.Action("danhsach", new { @check="ds",@tukhoa=@i.id })">@i.tenHDT</a></li>
                        }


                    </ul>
                </div>
            </div>
            <div class="header_bottom_right">
                <div class="slider">
                    <img  src="~/images/web/online.jpg"/>
                    <div class="clear"></div>
                </div>
            </div>
            <div class="clear"></div>
        </div>

    </div>
<div class="main">
    <div class="content">
        <div class="content_top">
            <div class="heading">
                <h3>Sản phẩm mới</h3>
            </div>
            <div class="see">
                @*<p><a href="#">See all Products</a></p>*@
            </div>
            <div class="clear"></div>
        </div>
        <div>
            <div class="section group">
                <div style="float:right;width:92%">
                    @foreach (var i in ViewBag.sanphammoi)
                    {
                        <div style="width:auto;height:auto;text-align:center">
                            <div class="grid_1_of_4 images_1_of_4">

                                <a href="@Url.Action("chitietsp", "home", new { @id=@i.id })"><img src="~/images/sanpham/@i.avatar" height="200" alt="" /></a>
                                <h2>@i.tenSP </h2>
                                <div class="price-details">
                                    <div class="price-number">
                                        <p><span class="rupees">@i.gia.ToString("###,###,###,### VND").Replace(',', '.')</span></p>
                                    </div>
                                    <div class="add-cart">
                                        <h4><a href="@Url.Action("ThemVaoGio", "giohang", new { @id_sanpham=@i.id })">Thêm vào giỏ</a></h4>
                                    </div>

                                </div>
                            </div>
                        </div>

                    }
                    </div>
                </div>

            </div>
        <div class="content_bottom">
            <div class="heading">
                <h3>Sản phẩm nổi bật</h3>
            </div>
            <div class="see">
                @*<p><a href="#">See all Products</a></p>*@
            </div>
            <div class="clear"></div>
        </div>
        <div class="section group">
            <div style="float:right;width:92%">

                @foreach (var i in ViewBag.sanphamnoibat)
                {
                    <div class=" grid_1_of_4 images_1_of_4">
                        <a href="@Url.Action("chitietsp", "home", new { @id=@i.id })"><img src="~/images/sanpham/@i.avatar" height="200" /></a>
                        <h2>@i.tenSP </h2>
                        <div class="price-details">
                            <div class="price-number">
                                <p><span class="rupees">@i.gia.ToString("###,###,###,### VND").Replace(',', '.')</span></p>
                            </div>
                            <div class="add-cart">
                                <h4><a href="@Url.Action("ThemVaoGio", "giohang", new { @id_sanpham=@i.id })">Thêm vào giỏ</a></h4>
                            </div>
                            <div class="clear"></div>
                        </div>
                    </div>
                }
                </div>
            </div>
        </div>
</div>
