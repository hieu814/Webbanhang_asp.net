@using WebBanHang_MVC.Models
<div class="headertop_desc">
    <div class="call">
        <p><span>Cần trợ giúp ?</span> Hãy gọi <span class="number">911</span></p>
    </div>
    <div class="account_desc">
        <ul>
            @{
                if (Session["TaiKhoan"] == null)
                {
                    <li><a href="@Url.Action("dangki","dangnhap")">Đăng kí</a></li>
                    <li><a href="@Url.Action("DangNhap","DangNhap")">Đăng nhập</a></li>
                }
                else
                {
                    <li>
                        <a href="@Url.Action("index","donhangs")">
                            @{
                                user user = (user)Session["TaiKhoan"];
                                
                                <span>Xin chào :</span> @user.Ten;
                            }
                        </a>
                    </li>
                    <li><a href="@Url.Action("DangXuat","DangNhap")">Đăng xuất</a></li>
                }
            }
        </ul>
         
    </div>
    <div class="clear"></div>
</div>
